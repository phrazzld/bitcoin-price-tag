{
  "name": "bitcoin-price-tag",
  "version": "1.0.0",
  "description": "Chrome extension to automatically annotate fiat prices online with their equivalents in bitcoin",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "build": "rimraf dist && tsc && cpy src/manifest.json dist --flat && cpy 'images/**/*' dist/images && cpy styles.css dist"
  },
  "keywords": [
    "chrome-extension",
    "bitcoin",
    "price-conversion"
  ],
  "author": "Phaedrus Raznikov",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/dylanseago/bitcoin-price-tag.git"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.322",
    "@types/node": "^22.15.17",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "cpy-cli": "^5.0.0",
    "happy-dom": "^17.4.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
