{
  "name": "bitcoin-price-tag",
  "version": "0.6.0",
  "description": "Automatically annotate fiat prices online with their equivalents in bitcoin",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:browser": "playwright test",
    "test:browser:chrome": "playwright test --project=chromium",
    "test:browser:firefox": "playwright test --project=firefox",
    "test:browser:webkit": "playwright test --project=webkit",
    "test:all": "pnpm test && pnpm test:browser"
  },
  "keywords": [
    "bitcoin",
    "chrome-extension",
    "price-conversion"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@playwright/test": "1.52.0",
    "@vitest/coverage-v8": "^3.1.2",
    "happy-dom": "^17.4.6",
    "playwright": "1.52.0",
    "vitest": "^3.1.2"
  }
}
