{
  "name": "bitcoin-price-tag",
  "version": "1.0.0",
  "description": "Chrome extension to automatically annotate fiat prices online with their equivalents in bitcoin",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:coverage:check": "vitest --coverage && echo '✅ Coverage thresholds met'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "build": "webpack --config webpack.config.js",
    "build:old": "rimraf dist && tsc && cpy src/manifest.json dist --flat && cpy 'images/**/*' dist/images && cpy styles.css dist && cpy tests/playwright/fixtures/index.html dist",
    "build:zip": "npm run build && node verify-build.js && cd dist && zip -r ../bitcoin-price-tag.zip * && cd .. && echo '✅ Created bitcoin-price-tag.zip'",
    "prepare": "husky"
  },
  "keywords": [
    "chrome-extension",
    "bitcoin",
    "price-conversion"
  ],
  "author": "Phaedrus Raznikov",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/dylanseago/bitcoin-price-tag.git"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@playwright/test": "^1.52.0",
    "@types/chrome": "^0.0.322",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "copy-webpack-plugin": "^13.0.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.27.0",
    "happy-dom": "^17.4.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vitest": "^3.1.3",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1"
  }
}
