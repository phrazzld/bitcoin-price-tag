{
  "name": "bitcoin-price-tag",
  "version": "0.6.0",
  "description": "Automatically annotate fiat prices online with their equivalents in bitcoin",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:browser": "playwright test",
    "test:browser:chrome": "playwright test --project=chromium",
    "test:browser:firefox": "playwright test --project=firefox",
    "test:browser:webkit": "playwright test --project=webkit",
    "test:all": "pnpm test && echo 'Browser tests are currently disabled during manifest-v3-migration'",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:format": "eslint . --ext .js --fix --rule 'prettier/prettier: error' --rule 'no-console: 0' --rule 'no-unused-vars: 0'",
    "lint:check": "eslint . --ext .js --max-warnings 0",
    "lint:safe": "eslint . --ext .js --fix --quiet --rule 'no-undef: 1'",
    "lint:hooks": "eslint . --ext .js --quiet --rule 'no-undef: 1' --rule 'comma-dangle: 0' --rule 'max-lines-per-function: 0' --rule 'complexity: 0' --rule 'max-depth: 0'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "semantic-release": "semantic-release",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run"
  },
  "keywords": [
    "bitcoin",
    "chrome-extension",
    "price-conversion"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "9.26.0",
    "@playwright/test": "1.52.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.9",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.3.1",
    "eslint-plugin-vitest": "0.5.4",
    "happy-dom": "^17.4.6",
    "playwright": "1.52.0",
    "prettier": "3.5.3",
    "semantic-release": "19.0.5",
    "vitest": "^3.1.2"
  }
}
