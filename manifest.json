{
  "manifest_version": 2,

  "name": "SatoshiVision",
  "short_name": "satoshivision",
  "description": "See prices in bitcoin",
  "version": "0.5",

  "browser_action": {
    "default_title": "SatoshiVision",
    "default_icon": {
      "19": "images/icon_19.png",
      "38": "images/icon_38.png"
    }
  },

  "permissions": ["*://*/*"],

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://*/*"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  }
}
