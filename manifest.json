{
  "_comment": "This is the LEGACY Manifest V2 version. The current extension uses Manifest V3 (see src/manifest.json).",
  
  "manifest_version": 2,

  "name": "Bitcoin Price Tag",
  "short_name": "btc-price-tag",
  "description": "See prices in bitcoin, not fiat.",
  "version": "0.6",

  "browser_action": {
    "default_title": "Bitcoin Price Tag",
    "default_icon": {
      "19": "images/icon_19.png",
      "38": "images/icon_38.png"
    }
  },

  "permissions": ["*://*/*"],

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://*/*"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  }
}